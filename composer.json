{
  "name": "digi-soft-ug/nikanzophp",
  "description": "Open-source modular PHP framework with attribute routing, DI, middleware, CLI, and migrations",
  "homepage": "https://github.com/digi-soft-ug/NikanzoPHP",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.3",
    "symfony/http-foundation": "^7.0",
    "symfony/dependency-injection": "^7.0",
    "symfony/console": "^7.0",
    "psr/http-message": "^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.0",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "twig/twig": "^3.0",
    "monolog/monolog": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.92",
    "roave/security-advisories": "dev-latest",
    "vimeo/psalm": "^5.18"
  },
  "autoload": {
    "psr-4": {
      "Nikanzo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nikanzo\\Tests\\": "tests/"
    }
  },
  "bin": [
    "nikan"
  ],
  "scripts": {
    "phpstan": "phpstan analyse",
    "phpstan:ci": "phpstan analyse --error-format=github",
    "php-cs-fixer": "php-cs-fixer fix --dry-run --diff",
    "php-cs-fixer:fix": "php-cs-fixer fix",
    "security-check": "composer check-platform-reqs",
    "psalm": "psalm --show-info=true"
  }
}